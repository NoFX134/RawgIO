<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginStart="8dp"
  android:layout_marginEnd="8dp">

  <View
    android:id="@+id/v_placeholder_iv"
    android:layout_width="@dimen/game_card_thin_width"
    android:layout_height="@dimen/game_card_thin_height"
    android:background="@drawable/bg_item_placeholder"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


  <TextView
    android:id="@+id/v_placeholder_tv"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="60dp"
    android:textSize="16sp"
    android:background="@drawable/bg_item_placeholder"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/v_placeholder_iv" />

  <Space
    android:layout_width="wrap_content"
    android:layout_height="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/v_placeholder_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>